<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card-body">
                <form action="/actualizar/<%=data.idCliente%>" method="post">
                    <!-- Busco el id unicamente para identidicarlo y mandr mi consulta ahÃ­ -->
                    <div class="form-group mt-3">
                        <input type="text" name="nombreCliente" value="<%= data.nombreCliente %>" class="form-control">
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" name="telCliente" value="<%= data.telCliente %>" class="form-control">
